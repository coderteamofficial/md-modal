*
    margin 0
    padding 0
    box-sizing border-box

html
body
    min-width 0
    min-height 0
    font-family Helvetica, sans-serif
    line-height 1.6em
    width 100%
    height 100vh
    background #D2ECEE
    display flex
    align-items center
    justify-content center

.wrapper
    color #0F2229
    text-align center
    h2
        font-size 2em
        margin-bottom 30px
        text-transform uppercase
    button
        display inline-flex
        align-items center
        justify-content center
        padding 15px 30px
        margin-top 30px
        font-size 1em
        border 1px solid #C15772
        background #C15772
        color #fff
        cursor pointer
        transition all 0.3s
        &:hover
            background darken(#C15772, 10%)

/*Bottom all styles for modal*/
.md-modal
    pointer-events none
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    padding 15px
    display flex
    align-items center
    justify-content center
    visibility hidden
    -webkit-backface-visibility hidden
    -moz-backface-visibility hidden
    backface-visibility hidden
    overflow auto
    z-index 2000

.md-show
    visibility visible

.md-overlay
    position fixed
    width 100%
    height 100%
    visibility hidden
    top 0
    left 0
    opacity 0
    background rgba(0,0,0,0.3)
    transition all 0.3s
    z-index 1000

.md-show ~ .md-overlay
    opacity 1
    visibility visible

/* Content styles */
.md-content
    pointer-events auto
    position relative
    margin auto
    max-width 550px
    border-radius 10px
    box-shadow rgba(0,0,0,0.1) 0 15px 90px
    background #fff
    color #000

.md-close
    position absolute
    top 15px
    right 15px
    width 30px
    height 30px
    cursor pointer
    opacity 0.3
    transition opacity 0.3s
    span
        position relative
        display block
        width 30px
        height 1px
        top 15px
        background #000
        transform rotate(45deg)
        transition all 0.3s
        &:last-child
            transform rotate(-45deg)
    &:hover
        opacity 1
        span
            background red
            transform rotate(40deg)
            &:last-child
                transform rotate(-40deg)

.md-title
    font-size 1.5em
    text-transform uppercase
    font-weight bold
    padding 50px
    text-align center
    line-height normal

.md-body
    padding 0 60px 60px
    ul
    ol
        margin-left 30px

.md-fade .md-content
    transform scale(0.7)
    opacity 0
    transition all 0.3s

.md-show.md-fade .md-content
    transform scale(1)
    opacity 1
